{pre_hooks, [
    {"linux", compile,
        "env LD_FLAGS=\"-DHAVE_PRCTL -DHAVE_PRLIMIT -D_FILE_OFFSET_BITS=64\" make -C c_src"}
]}.

{post_hooks, [
    {"linux", clean, "make -C c_src clean"},
    {edoc, "ex_doc --config .ex_doc.config --source-url \"https://github.com/msantos/perc\" --source-ref \"master\" \"perc\" `erl -noshell -s init stop -eval '{ok, [{_,_,X}]} = file:consult(\"src/perc.app.src\"), io:format(\"~s\", [proplists:get_value(vsn, X, \"0.0.0\")]).'` _build/default/lib/perc/ebin"}
]}.

{edoc_opts, [
    {doclet, edoc_doclet_chunks},
    {layout, edoc_layout_chunks},
    {dir, "_build/default/lib/perc/doc"}
]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        race_conditions,
        underspecs
    ]}
]}.
